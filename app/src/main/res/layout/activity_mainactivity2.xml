<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222123"
    tools:context=".GameActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/playerScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Player1: 0"
            android:textColor="#CDCFD8"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/player2Score"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Player2: 0"
            android:textColor="#CDCFD8"
            android:textSize="32sp" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="120dp"
                android:height="120dp"
                android:background="@drawable/stroke"
                android:fontFamily="casual"
                android:gravity="center"
                android:text=""
                android:textColor="#CDCFD8"
                android:textSize="42sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="120dp"
                android:height="120dp"
                android:background="@drawable/stroke"
                android:fontFamily="casual"
                android:gravity="center"
                android:text=""
                android:textColor="#CDCFD8"
                android:textSize="42sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="120dp"
                android:height="120dp"
                android:background="@drawable/stroke"
                android:fontFamily="casual"
                android:gravity="center"
                android:text=""
                android:textColor="#CDCFD8"
                android:textSize="42sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="120dp"
                android:height="120dp"
                android:background="@drawable/stroke"
                android:fontFamily="casual"
                android:gravity="center"
                android:text=""
                android:textColor="#CDCFD8"
                android:textSize="42sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="120dp"
                android:height="120dp"
                android:background="@drawable/stroke"
                android:fontFamily="casual"
                android:gravity="center"
                android:text=""
                android:textColor="#CDCFD8"
                android:textSize="42sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="120dp"
                android:height="120dp"
                android:background="@drawable/stroke"
                android:fontFamily="casual"
                android:gravity="center"
                android:text=""
                android:textColor="#CDCFD8"
                android:textSize="42sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="120dp"
                android:height="120dp"
                android:background="@drawable/stroke"
                android:fontFamily="casual"
                android:gravity="center"
                android:text=""
                android:textColor="#CDCFD8"
                android:textSize="42sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="120dp"
                android:height="120dp"
                android:background="@drawable/stroke"
                android:fontFamily="casual"
                android:gravity="center"
                android:text=""
                android:textColor="#CDCFD8"
                android:textSize="42sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="120dp"
                android:height="120dp"
                android:background="@drawable/stroke"
                android:fontFamily="casual"
                android:gravity="center"
                android:text=""
                android:textColor="#CDCFD8"
                android:textSize="42sp" />
        </TableRow>

    </TableLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" >
        <Button
            android:id="@+id/resetBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:layout_marginEnd="40dp"
            android:backgroundTint="@color/winLn"
            android:textSize="26sp"/>

        <Button
            android:id="@+id/drawBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Draw"
            android:backgroundTint="@color/drawBtn"
            android:textSize="26sp"/>

    </LinearLayout>

    <View
        android:visibility="gone"
        android:id="@+id/col2"
        android:layout_width="4dp"
        android:layout_height="290dp"
        android:background="@color/winLn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:visibility="gone"
        android:id="@+id/col1"
        android:layout_marginStart="-240dp"
        android:layout_width="4dp"
        android:layout_height="290dp"
        android:background="@color/winLn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:visibility="gone"
        android:id="@+id/col3"
        android:layout_marginEnd="-240dp"
        android:layout_width="4dp"
        android:layout_height="290dp"
        android:background="@color/winLn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:visibility="gone"
        android:id="@+id/row2"
        android:layout_width="290dp"
        android:layout_height="4dp"
        android:background="@color/winLn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:visibility="gone"
        android:id="@+id/row1"
        android:layout_marginTop="-240dp"
        android:layout_width="290dp"
        android:layout_height="4dp"
        android:background="@color/winLn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:visibility="gone"
        android:id="@+id/row3"
        android:layout_marginBottom="-240dp"
        android:layout_width="290dp"
        android:layout_height="4dp"
        android:background="@color/winLn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:visibility="gone"
        android:id="@+id/cross1"
        android:layout_width="410dp"
        android:layout_height="4dp"
        android:background="@color/winLn"
        android:rotation="45"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:visibility="gone"
        android:id="@+id/cross2"
        android:layout_width="410dp"
        android:layout_height="4dp"
        android:background="@color/winLn"
        android:rotation="-45"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>